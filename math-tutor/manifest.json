{
  "version": "3.0.0",
  "name": "Math Tutor with Python Integration",
  "description": "AI Math Tutor with Python-powered visualizations, drawing tools, and conversation management",

  "core": {
    "tutorEngine": "core/tutor-engine.js",
    "languageManager": "core/language-manager.js",
    "appLoader": "core/app-loader.js",
    "messageParser": "core/message-parser.js",
    "pythonEngine": "core/python-engine.js",
    "contentFilter": "core/content-filter.js",
    "drawingTool": "core/drawing-tool.js",
    "conversationManager": "core/conversation-manager.js"
  },

  "styles": {
    "core": "styles/core.css",
    "mobile": "styles/mobile.css",
    "drawing": "styles/drawing.css"
  },

  "data": {
    "languages": "data/languages.json",
    "contentFilter": "data/content-filter.json"
  },

  "apps": [],

  "libraries": {
    "pyodide": {
      "name": "Pyodide",
      "version": "0.24.1",
      "url": "https://cdn.jsdelivr.net/pyodide/v0.24.1/full/pyodide.js",
      "required": true,
      "description": "Python interpreter for the browser"
    }
  },

  "features": {
    "themes": ["dark", "light"],
    "imageUpload": true,
    "cameraCapture": true,
    "drawingTool": true,
    "conversationSaving": true,
    "contentFiltering": true,
    "textToSpeech": true,
    "multiLanguage": true
  },

  "settings": {
    "maxConcurrentApps": 3,
    "appTimeout": 5000,
    "enableOfflineCache": true,
    "pythonPackages": ["numpy", "matplotlib"],
    "maxConversations": 50,
    "maxUndoSteps": 50
  }
}
