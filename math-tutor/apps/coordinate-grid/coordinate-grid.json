{
  "id": "CoordinateGrid",
  "name": "Coordinate Grid",
  "version": "1.0.0",
  "category": "Coordinate Systems",
  "gradeLevels": ["middle", "high"],
  "description": "Interactive coordinate plane for plotting points, lines, parabolas, and inequalities",
  
  "capabilities": [
    "plot_points",
    "draw_lines",
    "graph_linear_functions",
    "graph_quadratic_functions",
    "graph_exponential_functions",
    "show_inequalities",
    "display_slope_intercept",
    "interactive_point_drag",
    "zoom_pan",
    "custom_window"
  ],

  "payloadSchema": {
    "type": {
      "type": "string",
      "enum": ["points", "line", "function", "inequality", "multi"],
      "description": "Type of visualization"
    },
    "points": {
      "type": "array",
      "items": {
        "type": "array",
        "minItems": 2,
        "maxItems": 3,
        "description": "[x, y, label?]"
      }
    },
    "equation": {
      "type": "string",
      "description": "Function equation (e.g., 'y = 2x + 3', 'y = x^2')"
    },
    "slope": {
      "type": "number",
      "description": "Slope for linear functions"
    },
    "intercept": {
      "type": "number",
      "description": "Y-intercept for linear functions"
    },
    "window": {
      "type": "object",
      "properties": {
        "xMin": { "type": "number" },
        "xMax": { "type": "number" },
        "yMin": { "type": "number" },
        "yMax": { "type": "number" }
      }
    },
    "gridSpacing": {
      "type": "number",
      "default": 1
    },
    "showGrid": {
      "type": "boolean",
      "default": true
    },
    "showAxes": {
      "type": "boolean",
      "default": true
    },
    "showLabels": {
      "type": "boolean",
      "default": true
    }
  },

  "examples": [
    {
      "name": "Plot Points",
      "payload": {
        "type": "points",
        "points": [[1, 2], [3, 4], [-2, 3, "A"]],
        "showGrid": true
      }
    },
    {
      "name": "Linear Function",
      "payload": {
        "type": "line",
        "slope": 2,
        "intercept": 3,
        "equation": "y = 2x + 3"
      }
    },
    {
      "name": "Quadratic Function",
      "payload": {
        "type": "function",
        "equation": "y = x^2 - 4x + 3"
      }
    },
    {
      "name": "Multiple Functions",
      "payload": {
        "type": "multi",
        "functions": [
          { "equation": "y = x", "color": "#00d4ff" },
          { "equation": "y = x^2", "color": "#ff0055" }
        ]
      }
    }
  ],

  "dependencies": [],
  "size": "38KB",
  "author": "Math Tutor Team",
  "license": "MIT"
}